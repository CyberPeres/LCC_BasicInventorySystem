@page
@model LCC_BasicInventorySystem.Pages.Products.AddProductModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add New Product</h2>

    <form method="post" class="card p-4 shadow-lg">
        <div class="mb-3">
            <label class="form-label">Product ID:</label>
            <input type="text" asp-for="Product.Id" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Product Name:</label>
            <input type="text" asp-for="Product.Name" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity:</label>
            <input type="number" asp-for="Product.Quantity" class="form-control" min="0" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">Add Product</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3 text-center">@Model.Message</div>
    }
</div>

